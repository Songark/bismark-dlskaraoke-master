<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#808080"
    android:keepScreenOn="true" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/trim_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <VideoView
                android:id="@+id/videoView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                tools:visibility="visible" />

            <VideoView
                android:id="@+id/videoView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                tools:visibility="visible" />
        </RelativeLayout>

        <com.karaoke.view.CustomHorizontalScrollView
            android:id="@+id/scrollViewBGV1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:fadeScrollbars="true"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.karaoke.view.ResizableImageView
                    android:id="@+id/bgv1Iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/bg7" />
            </LinearLayout>
        </com.karaoke.view.CustomHorizontalScrollView>

        <com.karaoke.view.CustomHorizontalScrollView
            android:id="@+id/scrollViewBGV2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:fadeScrollbars="true"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.karaoke.view.ResizableImageView
                    android:id="@+id/bgv2Iv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/app_name" />
            </LinearLayout>
        </com.karaoke.view.CustomHorizontalScrollView>

        <RelativeLayout
            android:id="@+id/frmBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null" >

            <LinearLayout
                android:id="@+id/lnGreet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:visibility="visible">

                <com.tbtc.jftv.text.KTextView
                    android:id="@+id/txtGreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dip"
                    android:textAlignment="center"
                    android:textColor="#FFC107"
                    android:textSize="@dimen/fontsize_lyric"
                    app:textStroke="true"
                    app:textStrokeColor="#0d0d0d"
                    app:textStrokeWidth="5.0" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnSongInfoPanel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:orientation="vertical"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/lnTitleInfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="35"
                        android:background="@null"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvReplayMark"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="#00CCFF"
                                android:textSize="24sp" />
                        </LinearLayout>

                        <com.tbtc.jftv.text.KTextView
                            android:id="@+id/txtSubTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Sub Title"
                            android:textSize="@dimen/fontsize_large"
                            app:textStroke="true"
                            app:textStrokeColor="#ffffff"
                            app:textStrokeWidth="5.0" />

                        <com.tbtc.jftv.text.KTextView
                            android:id="@+id/txtSongTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Song Title"
                            android:textSize="@dimen/fontsize_large"
                            app:textStroke="true"
                            app:textStrokeColor="#ffffff"
                            app:textStrokeWidth="5.0" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnLyrics"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/padding_arround2"
                        android:paddingRight="@dimen/padding_arround2"
                        android:paddingBottom="@dimen/space_normal"
                        android:visibility="invisible">

                        <LinearLayout
                            android:id="@+id/lnTickView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="left"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/padding_arround3"
                            android:paddingRight="@dimen/padding_arround3"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/tick0"
                                android:layout_width="@dimen/tick_size"
                                android:layout_height="@dimen/tick_size"
                                android:src="@drawable/num1"></ImageView>

                            <ImageView
                                android:id="@+id/tick1"
                                android:layout_width="@dimen/tick_size"
                                android:layout_height="@dimen/tick_size"
                                android:src="@drawable/num2"></ImageView>

                            <ImageView
                                android:id="@+id/tick2"
                                android:layout_width="@dimen/tick_size"
                                android:layout_height="@dimen/tick_size"
                                android:src="@drawable/num3"></ImageView>

                            <ImageView
                                android:id="@+id/tick3"
                                android:layout_width="@dimen/tick_size"
                                android:layout_height="@dimen/tick_size"
                                android:src="@drawable/num4"></ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lnLyricView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/space_normal"></LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnSongInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/space_small"
                        android:paddingBottom="@dimen/space_small">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="left|center"
                            android:orientation="vertical">

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtLblComposer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/composer"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtLblWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/writer"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtLblSinger"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/singer"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="left|center"
                            android:orientation="vertical">

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtDotComposer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/seperator"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtDotWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/seperator"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtDotSinger"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/seperator"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="left|center"
                            android:orientation="vertical">

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtComposer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtWriter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />

                            <com.tbtc.jftv.text.KTextView
                                android:id="@+id/txtInfoSinger"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:textColor="#ffffff"
                                android:textSize="@dimen/fontsize_normal"
                                app:textStroke="true"
                                app:textStrokeColor="#0d0d0d"
                                app:textStrokeWidth="5.0" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/curticklabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dip"
                                android:layout_weight="1"
                                android:text="00:00"
                                android:textAlignment="viewStart"
                                android:textColor="#FFFFFFFF" />

                            <TextView
                                android:id="@+id/maxticklabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="20dip"
                                android:layout_weight="1"
                                android:text="01:00"
                                android:textAlignment="viewEnd"
                                android:textColor="#FFFFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:layout_marginLeft="30dip"
                            android:layout_marginRight="30dip"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivPrev"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/padding_arround2"
                                android:layout_weight="1"
                                android:contentDescription="@string/noname"
                                android:src="@drawable/btn_prevsong" />

                            <ImageView
                                android:id="@+id/ivPause"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/padding_arround2"
                                android:layout_weight="1"
                                android:contentDescription="@string/noname"
                                android:src="@drawable/btn_pause" />

                            <ImageView
                                android:id="@+id/ivPlay"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/padding_arround2"
                                android:layout_weight="1"
                                android:contentDescription="@string/noname"
                                android:src="@drawable/btn_play" />

                            <ImageView
                                android:id="@+id/ivStop"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/padding_arround2"
                                android:layout_weight="1"
                                android:contentDescription="@string/noname"
                                android:src="@drawable/btn_stop" />

                            <ImageView
                                android:id="@+id/ivReplay"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/padding_arround2"
                                android:layout_weight="1"
                                android:contentDescription="@string/noname"
                                android:src="@drawable/btn_replay" />

                            <ImageView
                                android:id="@+id/ivNext"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="@dimen/padding_arround2"
                                android:layout_weight="1"
                                android:contentDescription="@string/noname"
                                android:src="@drawable/btn_nextsong" />

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dip"
                            android:layout_marginRight="20dip" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnkeyplus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_keyplus"
                            android:textColor="#00CCFF" />

                        <Button
                            android:id="@+id/btnkeyminus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_keyminus"
                            android:textColor="#00CCFF" />

                        <Button
                            android:id="@+id/btnspeedplus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_speedplus"
                            android:textColor="#00CCFF" />

                        <Button
                            android:id="@+id/btnspeedminus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_speedminus"
                            android:textColor="#00CCFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00FFFFFF"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnmrar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_mrar"
                            android:textColor="#00CCFF" />

                        <Button
                            android:id="@+id/btnrecording"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_recording"
                            android:textColor="#00CCFF" />

                        <Button
                            android:id="@+id/btnvolumeplus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_volumeplus"
                            android:textColor="#00CCFF" />

                        <Button
                            android:id="@+id/btnvolmuneminus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_volumeminus"
                            android:textColor="#00CCFF" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnMark"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgMarkText"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/marktext_height"
                        android:scaleType="centerInside"
                        android:src="@drawable/score_100" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/space_large"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgMark1"
                            android:layout_width="@dimen/mark_width"
                            android:layout_height="@dimen/mark_height"
                            android:src="@drawable/n0_9" />

                        <ImageView
                            android:id="@+id/imgMark2"
                            android:layout_width="@dimen/mark_width"
                            android:layout_height="@dimen/mark_height"
                            android:src="@drawable/n0_9" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/viewSheetMusic"
        android:layout_width="match_parent"
        android:layout_height="240dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnMidiSheet"
        android:layout_width="37dip"
        android:layout_height="37dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padding_arround1"
        android:layout_marginRight="@dimen/padding_arround1"
        android:clickable="true"
        android:src="@drawable/ic_back_icon" />

</RelativeLayout>